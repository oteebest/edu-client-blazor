
<nav aria-label="Page navigation example">

    <ul class="pagination justify-content-center">

        @if (PagerEnablePrevious)
        {
            if (PageNumberParam - 1 == PagerStartIndex)
            {
                <li class="page-item" @onclick="(() => LoadData(PageNumberParam - 1, true))">
                    <a class="page-link">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item" @onclick="(() => LoadData(PageNumberParam - 1, false))">
                    <a class="page-link">Previous</a>
                </li>
            }

        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        }


        @for (int j = PagerStartIndex; j <= PagerEndIndex; j++)
        {
            int pageNumber = j + 1;

            if (j == CurrentIndex)
            {
                <li class="page-item active">
                    <a class="page-link">@pageNumber</a>
                </li>
            }
            else
            {
                <li class="page-item" @onclick="(() => LoadData(pageNumber,false) )">
                    <a class="page-link">@pageNumber</a>
                </li>
            }


        }



        @if (PagerEnableNext)
        {
            if (PageNumberParam - 1 == PagerEndIndex)
            {
                <li class="page-item" @onclick="(() => LoadData(PageNumberParam + 1, true))">
                    <a class="page-link">Next</a>
                </li>
            }
            else
            {
                <li class="page-item" @onclick="(() => LoadData(PageNumberParam + 1, false))">
                    <a class="page-link">Next</a>
                </li>
            }

        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }



    </ul>

</nav>








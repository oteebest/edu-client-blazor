@page "/asses"

<PageHeader PageHeaderTile="Assessments" />

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

        <div class="card">
            <div class="card-header">

                <div class="">
                    <div class="form-row">
                        <div class="col-7">
                            <input placeholder="Search name" @oninput="Search" class="form-control" value="@searchText">
                        </div>
                        <div class="col">
                            <button @onclick="ShowModal" class="btn btn-primary btn-sm float-right" id="btnCreate">Create Asssessment</button>
                        <a @onclick="ShowModal" class="btn btn-primary btn-sm float-right" id="btnCreate">Create Asssessment</a></div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Duration</th>
                                <th scope="col">Created</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var assessment in clientAssessments)
                            {
                                <tr>

                                    <td>@assessment.Name</td>
                                    <td>@assessment.Duration</td>
                                    <td>@assessment.CreatedOn.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button class="btn btn-primary btn-xs">Edit</button>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger btn-xs">Delete</button>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>

                    <FormWrapper @ref="modalForm" Title="Assessment">
                        <AssForm OnCloseCallBack="HandleClose" OnSubmitCallBack="@HandleSubmit"></AssForm>
                    </FormWrapper>
                </div>
            </div>
        </div>


    </div>
</div>

